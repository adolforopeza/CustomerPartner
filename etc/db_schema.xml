<?xml version="1.0" ?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
	<table name="customer_partner" resource="default" engine="innodb" comment="customer_partner Table">
		<column xsi:type="int" name="entity_id" padding="10" unsigned="true" nullable="false" identity="true" comment="Entity Id"/>
		<constraint xsi:type="primary" referenceId="PRIMARY">
			<column name="entity_id"/>
		</constraint>
        <column name="name" nullable="true" xsi:type="varchar" comment="name" length="255"/>
        <column name="description" nullable="true" xsi:type="text" comment="description" />
		<column name="short_description" nullable="true" xsi:type="text" comment="short description"/>
		<column name="url_key" nullable="true" xsi:type="varchar" comment="url_key" length="255"/>
		<column name="customer_group_id" nullable="true" xsi:type="smallint" comment="customer_group_id" identity="false"/>
		<column name="is_active" nullable="true" xsi:type="boolean" comment="is_active"/>
		<column name="created" nullable="true" xsi:type="datetime" comment="created" default="CURRENT_TIMESTAMP"/>
		<column name="updated" nullable="true" xsi:type="datetime" comment="updated" default="CURRENT_TIMESTAMP" on_update="true"/>
	</table>
</schema>
